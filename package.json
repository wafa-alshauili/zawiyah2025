{
  "name": "zawiyah2025",
  "version": "2.0.0",
  "description": "نظام حجز القاعات المدرسية الذكي - School Classroom Reservation System",
  "private": true,
  "keywords": [
    "school",
    "classroom",
    "reservation",
    "booking",
    "arabic",
    "firebase",
    "real-time"
  ],
  "author": {
    "name": "Zawiyah Development Team",
    "email": "dev@zawiyah2025.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wafa-alshauili/zawiyah2025.git"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npm start",
    "start:client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "clean": "rimraf node_modules client/node_modules server/node_modules client/.next server/dist",
    "migrate": "cd server && npm run migrate",
    "check-data": "cd server && npm run check-data",
    "backup": "cd server && npm run backup",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "deploy": "npm run build && npm run deploy:railway",
    "deploy:railway": "railway deploy",
    "deploy:vercel": "cd client && vercel --prod",
    "deploy:render": "render deploy"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "directories": {
    "lib": "./client",
    "doc": "./docs"
  }
}